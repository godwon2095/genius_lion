<h2>회원정보수정</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= image_tag(current_user.image.present? ? current_user.image : "default_profile.jpg", id: "profile_image", width: 150, height: 150) %><br>
    <a href="#" class="profile-upload-margin" id="edit_upload_button">프로필 사진</a>
    <%= f.file_field :image, class: "hidden-file-field", id: "edit_image_upload" %>
    <input type="file" id="filechooser" class="display-none">
  </div><br>

  <div class="field">
    <%= f.label :email, '이메일' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name, '이름' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :gender, '성별' %><br />
    <%= f.select :gender, [['선택안함', 'default'], ['남성', 'male'], ['여성', 'female'], ['기타', 'others']] %>
  </div>

  <div class="field">
    <%= f.label :birth, '생년월일' %><br />
    <%= f.text_field :birth, class: "birth" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
    <%= f.submit 'hidden_upload_button',  class: "display-none" %>
  </div>
<% end %>
